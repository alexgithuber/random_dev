<UserControl x:Class="WPFLib.DirectFolder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFLib"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="10">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBox Name="DC"  Grid.Column="0"   Text="{Binding Folder}" Margin="0,0,-1,0" />
        <Button Name="DirectoryClick" Content="..."  Grid.Column="1" HorizontalAlignment="Center" Height="20" VerticalAlignment="Top" Click="ChooseDirectory" />


    </Grid>


</UserControl>
